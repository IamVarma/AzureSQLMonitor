                            </TransformGroup>
                        </Path.RenderTransform>
                    </Path>
                </Grid>
            </Viewbox>
        </Button>


        <charting:Chart
                x:Name="PieChart"
                Title="Table Sizes" Background="Black" LegendTitle="Table Names" Grid.Row="2">
            <charting:Chart.Series>
                <charting:PieSeries
                        Title="TableSizes"
                        ItemsSource="{Binding TableList}"
                        IndependentValueBinding="{Binding TableName}"
                        DependentValueBinding="{Binding TableSize}"
                        IsSelectionEnabled="True"/>
            </charting:Chart.Series>



        </charting:Chart>

       
   

    </Grid>
</Page>
